  {#localize key="plugin.forgotpassword.forgotPasswordDialog.instructions"/}
  
  <div class="forgotpassword-dialog-form-wrapper">
    <form id="forgotpassword-form" name="forgotpassword-form">
      <label for="forgotpassword-email">{#localize key="plugin.forgotpassword.forgotPasswordDialog.email"/}</label>
      <input type="text" name="email" id="forgotpassword-email" />
    </form>
  </div>
