<?xml version="1.0" encoding="UTF-8"?>
<!-- This file is not required if you don't need any extra configuration. -->
<faces-config version="2.0"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://java.sun.com/xml/ns/javaee
        http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

  <!-- This descriptor activates the JSF 2.0 Servlet -->

  <!-- Write your navigation rules here. You are encouraged to use CDI for creating @Named managed beans. -->

  <application>
    <locale-config>
      <default-locale>en</default-locale>
      <supported-locale>fi</supported-locale>
    </locale-config>
    <resource-handler>fi.muikku.plugins.PluginResourceHandler</resource-handler>
  </application>

  <factory>
    <exception-handler-factory>fi.muikku.errors.ExceptionHandlerFactory</exception-handler-factory>
  </factory>

</faces-config>
