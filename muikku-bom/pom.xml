      <dependency>
        <groupId>fi.otavanopisto.muikku</groupId>
        <artifactId>timed-notifications-plugin</artifactId>
        <version>${muikku.version}</version>
      </dependency>

      <dependency>
        <groupId>fi.otavanopisto.muikku</groupId>
        <artifactId>timed-notifications-plugin-persistence</artifactId>
