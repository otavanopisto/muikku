		<!-- Webapp-permission -->

		<webapp-permission.version>1.0.2</webapp-permission.version>
		
		<!--  Mail -->
		<mail-api.version>1.5.4</mail-api.version>
		
		<!--  Tests -->
		<cdi-unit.version>3.1.0</cdi-unit.version>
		<rest-assured.version>2.3.4</rest-assured.version>
		
    
